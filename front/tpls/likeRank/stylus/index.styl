$img_back = '//file.ihuayue.cn/group1/M00/04/3F/Chtgd1mb4SSALZ2zAAAB4ZdqjM0358.png';
$img_rank1 = '//file.ihuayue.cn/group1/M00/04/3F/ChtgcVmb4SSAP9f_AAAAu73ny-U159.png';
$img_rank2 = '//file.ihuayue.cn/group1/M00/04/3F/Chtgd1mb4SSAHSqQAAAAu2RPWOA549.png';
$img_rank3 = '//file.ihuayue.cn/group1/M00/04/3F/ChtgcVmb4SSAag7pAAAAu7R8jy4998.png';
$img_rank = '//file.ihuayue.cn/group1/M00/04/3F/ChtgcVmb4SSAbGMhAAAAu4e-HRI666.png';
