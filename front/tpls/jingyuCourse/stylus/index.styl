@import '../../../cssLibs/reset.styl';
@import '../../../cssLibs/common.styl';

.wrapper {
    min-height: 100%;

    .topImg {
        width: 100%;
        height: 2.536rem;

        img {
            width: 100%;
            height: 100%;
        }
    }

    .btnGroup {
        padding: 0.576rem 0.49rem;

        .row {
            margin-bottom: 0.58rem;
            height: 0.96rem;
            border: 0.02rem solid #2B2B2B;
            border-radius: 0.12rem;
            font-size: 0;

            .front {
                display: inline-block;
                margin-left: 0.19rem;
                line-height: 0.96rem;
                height: 0.12rem;
                width: 0.12rem;
                vertical-align: middle;
                background: url("../img/cricle.png") no-repeat;
                -webkit-background-size: 0.12rem 0.12rem;
                background-size: 0.12rem 0.12rem;
            }

            .text {
                display: inline-block;
                margin-left: 0.148rem;
                line-height: 0.96rem;
                font-size: 0.3rem;
                color: #2B2B2B;
                vertical-align: middle;
            }

            .go {
                display: inline-block;
                float: right;
                height: 0.46rem;
                width: 0.46rem;
                margin: 0.25rem 0.3rem 0 0;
                background: url("../img/triangle.png") no-repeat;
                -webkit-background-size: 0.46rem 0.46rem;
                background-size: 0.46rem 0.46rem;
            }
        }
    }
}

.wrapper-content {
    min-height: 100%;

    .content {
        padding: 0.484rem 0.344rem;

        h3 {
            font-size: 0.36rem;
            color: #2B2B2B;
        }

        .text {
            margin-top: 0.342rem;
            font-size: 0.3rem;
            color: #626262;

            p {
                line-height: 0.6rem;
            }
        }
    }
}

