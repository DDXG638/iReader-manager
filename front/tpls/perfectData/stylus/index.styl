@import '../../../cssLibs/reset.styl';
@import '../../../cssLibs/common.styl';

.wrapper {
    position: relative;
    padding-bottom: 1rem;
    width: 100%;
    min-height: 100%;
    background-color: #67C487;

    .topPart {
        width: 100%;
        height: 4.28rem;

        img {
            width: 100%;
        }
    }

    .middlePart {
        padding: 0.34rem 0.5rem 0 0.68rem;

        .box {
            position: relative;
            width: 6.12rem;
            height: 2rem;
            background: url(//file.ihuayue.cn/group1/M00/05/D8/ChtgcVm6WxmADLeSAAALk3t-eJ8777.png) no-repeat;
            background-size: 6.1rem 2rem;
            box-sizing: border-box;

            .ico {
                position: absolute;
                top: 0.4rem;
                left: -0.32rem;
                width: 0.64rem;
                height: 0.64rem;

                &.ico-1 {
                    background: url(../img/1.png) no-repeat;
                    background-size: 0.64rem 0.64rem;
                }
                &.ico-2 {
                    background: url(../img/2.png) no-repeat;
                    background-size: 0.64rem 0.64rem;
                }
                &.ico-3 {
                    background: url(../img/3.png) no-repeat;
                    background-size: 0.64rem 0.64rem;
                }
            }

            .titled {
                display: inline-block;

                .big-title {
                    margin: 0.44rem 0 0 0.74rem;
                    font-size: 0.3rem;
                    font-weight: 200;
                }

                .small-title {
                    font-size: 0.24rem;
                    margin: 0.16rem 0 0 0.74rem;
                    color: #8D8D8D;
                    font-weight: 200;
                }
            }

            .title {
                margin: 0.62rem 0 0 0.74rem;
                font-size: 0.3rem;
            }

            .status-btn {
                margin: 0.41rem 0.24rem 0 0;
                width: 1.5rem;
                height: 0.64rem;
                border: 0.01rem solid #595139;
                border-radius: 0.46rem;
                font-size: 0;
                background: #FE6C6C;
                color: #ffffff;
                outline: none;

                &.status-finish {
                    background: #ffffff;
                    color: #595139;
                }

                &.status-get {
                    background: #FFA313;
                    color: #ffffff;
                }

                .status-ico {
                    display: inline-block;
                    margin-right: 0.08rem;
                    width: 0.34rem;
                    height: 0.28rem;
                    background: url(../img/finish.png) no-repeat;
                    background-size: 0.34rem 0.28rem;

                }

                .status-text {
                    font-size: 0.28rem;
                }
            }
        }
    }

    .bottomPart {
        position: absolute;
        left: 0;
        top: 9.7rem;
        width: 100%;
        height: 4.36rem;

        img {
            width: 100%;
        }
    }
}